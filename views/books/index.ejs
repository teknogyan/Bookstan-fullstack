<h2>Find Books</h2>
<%= searchQuery.title %>
<form action="/books" method="get">
  <input type="text" name="bookToFind" value= "<%= searchQuery.title %>" />
  <button type="submit">
    <i class="fa-solid fa-magnifying-glass"></i>
  </button>
</form>

<div class="books-container">
<% books.map((book) => { %> 
<% const thumbnail = (book.thumbnail) ? JSON.parse(book.thumbnail) : '#' %>
<div class="book-card">
  <!-- Thumbnail image is represented by a base 64 string  -->
  <img width="100px" height="150px" src= <%= `data:${thumbnail.type};charset=utf-8;base64,${thumbnail.data}` %> alt="" />
  <h3><%= book.title %></h3>
  <h4>Author: <%= book.author.name %></h4>
  <h4> Pages: <%= book.pageCount %> </h4>
  <a href="/books/<%= book.id %>">Know more...</a> 
  <form action="/books/delete" method="post">
  <input hidden name= "id" value= "<%= book.id %>" >
  <button class="button" type="submit">
    <i class="fa-solid fa-trash-can"></i>
  </button>
  </form>
</div>
<% }) %>  
</div>

<% if(error) { %>
<div class="error-message">
  <%= error %>
</div>
  <% } %>

