<div>
  <h2>Add Book</h2>

  <form action="/books" method="POST" >
    <div>
      <label for="title">Title</label>
      <input type="text" name="title" required />
    </div>

    <div>
      <label for="author"> Author </label>
      <select name="author" id="">
        <% authors.map((author) => { %>
        <option value="<%= author.id %>"><%= author.name %></option>
        <% }) %>
      </select>
    </div>

    <div>
      <label for="published">Published on</label>
      <input type="date" name="published" placeholder="yyyy/mm/dd" required />
    </div>

    <div>
      <label for="pages">Page Count</label>
      <input type="number" min="1" name="pages" required />
    </div>

    <div>
      <label for="created">Created on</label>
      <input type="date" name="created" placeholder="yyyy/mm/dd" />
    </div>

    <div>
      <label for="thumbnail">Thumbnail</label>
      <input
        type="file"
        name="thumbnail"
        class="filepond"
        multiple
        data-allow-reorder="true"
        data-max-file-size="3MB"
        data-max-files="3"
      />
    </div>

    <div>
      <label for="description">Description</label>
      <textarea name="description" id="" cols="30" rows="10"></textarea>
    </div>

    <button type="submit">Create</button>

    <a href="/books">Cancel</a>
  </form>
</div>

<style>
  form {
    margin: 0 auto;
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 24px;
  }


  h2 {
    margin-bottom: 1rem;
  }


  .error {
    color: red;
  }
  /* To style filepond container size */
  .filepond--root {
    width: 300px;
    height: 300px;
  }
</style>
